<fieldset>
  <% if @modality.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
        <ul>
          <% @modality.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
  <%= form_for(@modality, :html => { :class => :form }) do |f| -%>
    <%= f.label 'Nome', :class => "control-label" %>
    <%= f.text_field :name, :class => "input-xlarge", :onkeyup => "toUppercase(this);", :maxlength => "80" %>
    
    <br>
    <div class="form-actions-white">
      <!-- <%= f.submit %> -->
      <% if @modality.id.nil? %>
      <button class="btn btn-primary" type="submit">Cadastrar</button>
      <% else %>
      <button class="btn btn-info" type="submit">Alterar</button>
      <% end %>
      ou 
      <%= link_to "Cancelar", modalities_path, :confirm => "Deseja cancelar a operação? Todos os dados serão perdidos." %>
    </div>
    
  <% end %>

</fieldset>