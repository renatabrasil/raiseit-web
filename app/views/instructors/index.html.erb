<h2>Professores cadastrados</h2>


<%= link_to 'Novo Professor', new_instructor_path %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th style="text-align: left">Nome</th>
      <th class="" style="text-align: left">E-mail</th>
      <th class=""></th>
    </tr>    
  </thead>
  <tbody>
    <% if !@instructors.empty? %>
      <% @instructors.each do |instructor| %>
        <tr>
          <td><%= instructor.name %></td>
          <td><%= instructor.email %></td>
          <td style="text-align: center; width: 20%">
            <%= link_to(instructor_path(instructor), :class => "link-icon", :title => "Visualizar", :alt => "Visualizar") do %>
               Visualizar
              <% end %> |
              <%= link_to(edit_instructor_path(instructor), :class => "link-icon", :title => "Alterar") do %>
               Editar
              <% end %> |
            <%= link_to(instructor_path(instructor), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover este registro?")}", :class => "link-icon", :title => "Remover" ) do %>
             Deletar
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
    <tr>
        <td colspan="4" style="text-align: center">
          <font class="text-error" >Não há professores cadastrados.</font>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
