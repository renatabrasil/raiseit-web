<br>
<fiedset>
  <% if @instructor.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
        <ul>
          <% @instructor.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
<%= nested_form_for(@instructor, :html => { :class => :form }) do |f| -%>
  
  
  <%= f.label 'Nome' %>
  <%= f.text_field :name, :maxlength => "80" %>
  
  <br>
  <%= f.label 'CPF' %>
  <%= f.text_field :cpf, :maxlength => "80" %>
  
  <br>
  <%= f.label 'Telefone' %>
  <%= f.text_field :phone1, :maxlength => "40" %>
  
  <br>
  <%= f.label 'E-mail' %>
  <%= f.text_field :email, :maxlength => "40" %>
  
  <br>
  <%= f.label 'Código' %>
  <%= f.text_field :code, :maxlength => "20" %>
  
  <%= f.fields_for :user do |fb| %>

    <div><%= fb.label :password %><br />
    <%= fb.password_field :password %></div>

    <div><%= fb.label :password_confirmation %><br />
    <%= fb.password_field :password_confirmation %></div>
  <% end %>
  

<br>  
  <div>
    <!-- <%= f.submit %> -->
    <% if @instructor.id.nil? %>
    <button class="btn btn-primary" type="submit">Cadastrar</button>
    <% else %>
    <button class="btn btn-info" type="submit">Alterar</button>
    <% end %>
    ou 
    <%= link_to "Cancelar", instructors_path, data: { confirm: 'Deseja cancelar a operação? Todos os dados serão perdidos.'}, :class => 'btn btn-default' %>
  </div>
<% end %>
</fiedset>