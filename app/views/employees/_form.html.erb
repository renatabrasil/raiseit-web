<br>
<fiedset>
  <% if @employee.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
        <ul>
          <% @employee.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  
  <% end %>
  
<%= form_for(@employee, :html => { :class => :form }) do |f| -%>
  
  <%= f.label 'Nome', :class => "control-label" %>
  <%= f.text_field :name, :class => "input-xlarge", :onkeyup => "toUppercase(this);", :maxlength => "80" %>
  
  <br>
  <%= f.label 'E-mail', :class => "control-label" %>
  <%= f.text_field :email, :class => "input-xlarge", :onkeyup => "toUppercase(this);", :maxlength => "40" %>
  
  <br>
  <%= select("employee", "type_employee_id", TypeEmployee.all.collect {|p| [ p.name, p.id ] }, {include_blank: '-- Selecione o tipo de empregado --'}, {class: "span4", onchange: "atualizaForm()", id:"idTypeEmployee"}) %>

<br>  
  <div class="form-actions-white">
    <!-- <%= f.submit %> -->
    <% if @employee.id.nil? %>
    <button class="btn btn-primary" type="submit">Cadastrar</button>
    <% else %>
    <button class="btn btn-info" type="submit">Alterar</button>
    <% end %>
    ou 
    <%= link_to "Cancelar", employees_path, :confirm => "Deseja cancelar a operação? Todos os dados serão perdidos." %>
  </div>
<% end %>
</fiedset>