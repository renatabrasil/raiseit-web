<h2>Empregados cadastrados</h2>


<%= link_to 'Novo Empregado', new_employee_path %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th class="rotulo">Nome</th>
      <th class="rotulo" style="text-align: center; width: 20%">E-mail</th>
      <th class="rotulo"></th>
    </tr>    
  </thead>
  <tbody>
    <% if !@employees.empty? %>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.name %></td>
          <td style="text-align: center;"><%= employee.email %></td>
          <td style="text-align: center; width: 20%">
            <%= link_to(employee_path(employee), :class => "link-icon", :title => "Visualizar", :alt => "Visualizar") do %>
               Visualizar
              <% end %> |
              <%= link_to(edit_employee_path(employee), :class => "link-icon", :title => "Alterar") do %>
               Editar
              <% end %> |
            <%= link_to(employee_path(employee), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover este imóvel?")}", :class => "link-icon", :title => "Remover" ) do %>
             Deletar
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
    <tr>
        <td colspan="4" style="text-align: center">
          <font class="text-error" >Não há características cadastradas.</font>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
