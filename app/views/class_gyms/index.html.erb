<% title " - Turmas" %>
<div class="header">
	Turmas
	<hr class="hr-header">
	<div class="subheader">
	</div>
</div>

<%= link_to 'Nova Turma', new_class_gym_path %><br/>
<div class="table-responsive">
	<table class="table table-bordered table-striped table-hover hover-dark table-condensed text-center">
	  <thead>
	    <tr>
	      <th>Modalidade</th>
	      <th>Data de Início</th>
	      <th>Horário</th>
	      <th>Professor(es)</th>
	      <th>Alunos Matriculados</th>
	      <th>Capacidade</th>
	      <th>Status</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% if !@class_gyms.empty? %>
	      <% @class_gyms.each do |class_gym| %>
	        <tr>
	          <td><%= class_gym.modality.name%> </td>
	          <td><%= class_gym.start_date.blank? ? "-" : l(class_gym.start_date, :format => :date) %></td>
	          <td><%= class_gym.schedule %></td>
	          <td>
	            <% class_gym.instructors.each do |instructor| %>
	               <%= instructor.blank? ? "Não informado" : instructor.name %> <br>
	            <% end %>
            </td>
	          <td><%= class_gym.students.size %></td>
	          <td><%= class_gym.capacity %></td>
	          <td><%= class_gym.open? ? "ABERTA" : "FECHADA" %></td>
	          <td>
	            <%= link_to(class_gym_path(class_gym), :class => "link-icon", :title => "Detalhar", :alt => "Detalhar") do %>
	                 Detalhar
	            <% end %> |
	            <%= link_to(edit_class_gym_path(class_gym), :class => "link-icon", :title => "Editar") do %>
	               Editar
	              <% end %> |
	            <%= link_to(class_gym_path(class_gym), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover este registro?")}", :class => "link-icon", :title => "Remover" ) do %>
	              Remover
	            <% end %>
	          </td>
	        </tr>
	      <% end %>
	    <% else %>
	      <tr>Não há turmas cadastradas até esta data.</tr>
	    <% end %>   
	  </tbody>
	</table>
</div>
