<h1>Turmas</h1>
<br />
<%= link_to 'Novo Objetivo de treino', new_training_goal_path %>
<table width="100%" style="border: 1px solid #000000;">
  <thead>
    <tr>
      <th style="text-align: left">Denominação</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if !@training_goals.empty? %>
      <% @training_goals.each do |training_goal| %>
        <tr>
          <td style="text-align: left"><%= training_goal.denomination %></td>
          <td>
            <%= link_to(training_goal_path(training_goal), :class => "link-icon", :title => "Visualizar", :alt => "Visualizar") do %>
                 Visualizar
            <% end %> |
            <%= link_to(edit_training_goal_path(training_goal), :class => "link-icon", :title => "Alterar") do %>
               Alterar
              <% end %> |
            <%= link_to(training_goal_path(training_goal), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover este objetivo?")}", :class => "link-icon", :title => "Remover" ) do %>
              Apagar
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>Não há objetivos de treino cadastrados até esta data.</tr>
    <% end %>   
  </tbody>
</table>