<h2>Máquinas cadastradas</h2>


<%= link_to 'Nova Maquina', new_equipment_path %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th style="text-align: left">Nome</th>
      <th style="text-align: left">Modalidade</th>
      <th class=""></th>
    </tr>    
  </thead>
  <tbody>
    <% if !@equipments.empty? %>
      <% @equipments.each do |equipment| %>
        <tr>
          <td><%= equipment.description %></td>
           <td><%= equipment.modality.name %></td>
          <td style="text-align: center; width: 20%">
            <%= link_to(equipment_path(equipment), :class => "link-icon", :title => "Detalhar", :alt => "Detalhar") do %>
               Detalhar
              <% end %> |
              <%= link_to(edit_equipment_path(equipment), :class => "link-icon", :title => "Alterar") do %>
               Editar
              <% end %> |
            <%= link_to(equipment_path(equipment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover este registro?")}", :class => "link-icon", :title => "Remover" ) do %>
             Remover
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
    <tr>
        <td colspan="4" style="text-align: center">
          <font class="text-error" >Não há Equipamentos cadastrados.</font>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

