<h1>Perfis de Treino</h1>
<br />
<%= link_to 'Novo Perfil de Treino', new_profile_training_path %>
<table width="100%" style="border: 1px solid #000000;">
  <thead>
    <tr>
      <th style="text-align: left">Denominação</th>
      <th style="text-align: left">Objetivo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if !@profile_trainings.empty? %>
      <% @profile_trainings.each do |profile_training| %>
        <tr>
          <td style="text-align: left"><%= profile_training.name %></td>
          <td style="text-align: left"><%= profile_training.training_goal.denomination %></td>
          <td>
            <%= link_to(profile_training_path(profile_training), :class => "link-icon", :title => "Visualizar", :alt => "Visualizar") do %>
                 Visualizar
            <% end %> |
            <%= link_to(edit_profile_training_path(profile_training), :class => "link-icon", :title => "Alterar") do %>
               Alterar
              <% end %> |
            <%= link_to(profile_training_path(profile_training), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja remover este objetivo?")}", :class => "link-icon", :title => "Remover" ) do %>
              Apagar
            <% end %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3">
          Não há perfis de treino cadastrados até esta data.
        </td>
      </tr>
    <% end %>   
  </tbody>
</table>