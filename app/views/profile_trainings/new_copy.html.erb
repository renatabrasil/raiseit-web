<% if @profile_training.id.nil? %>
  <h1>Cadastrar Perfil de Treino</h1>
<% end %>


<br>

<fieldset>
  <% if @profile_training.errors.any? %>
    <div class="alert alert-error">
      <button type="button" class="close" data-dismiss="alert">×</button>
        <ul>
          <% @profile_training.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  
  <%= form_for([@profile_training], :html => { :class => :form }) do |f| -%>
    
    <%= f.label :name, t("activerecord.attributes.profile_training.name", :default => "Nome:"), :class => 'control-label' %>
    <%= f.text_field :name, :class => 'text_field', :onkeyup => "toUppercase(this);", :size => "40" %>
    
    <br>
    <%= f.label 'Objetivo', :class => "control-label" %>
    <%= select("profile_training", "training_goal_id", TrainingGoal.all.collect {|t| [ t.denomination, t.id ] }, {include_blank: '-- Selecione o objetivo --'}) %>
    
    <br>
    <%= f.fields_for :training do |fa| %>
      <br>
      <% if !@profile_training.id.nil? %>
        <%= link_to 'Cadastrar mais exercícios', form_exercise_profile_training_path(@profile_training) %>
        <br>
        <br>
      <% end %>
      
      <%= fa.fields_for :training_workouts do |fb| %>
    <strong><%= fb.object.workout.description %> (<%= fb.object.workout.physical_category.name %>)</strong><br>
    <br>
    <br />
    <%= fb.object.workout.id %>
      
      <%= fb.label "Séries:", t("activerecord.attributes.training_workout.series", :default => "Séries:") %>
      <%= fb.text_field :series, :class => 'text_field input-xxlarge', :size => '6', :maxlength => '4' %>
      
      <%= fb.label "Repetições:", t("activerecord.attributes.training_workout.repetitions", :default => "Repetições:") %>
      <%= fb.text_field :repetitions, :class => 'text_field input-xxlarge', :size => '6', :maxlength => '4' %>
      
      <%= fb.label "Duração:", t("activerecord.attributes.training_workout.duration", :default => "Duração:") %>
      <%= fb.text_field :duration, :class => 'text_field input-xxlarge', :size => '6', :maxlength => '4' %>
      
      <%= fb.label "Carga:", t("activerecord.attributes.training_workout.load", :default => "Carga:") %>
      <%= fb.text_field :load, :class => 'text_field input-xxlarge', :size => '6', :maxlength => '4' %>
      <br>
    
  <% end %>
  
  <br>
  <br>
  <div class="form-actions-white">
    <button class="btn btn-primary" type="submit">Confirmar</button>
    ou 
    <%= link_to "Cancelar", profile_trainings_path, :confirm => "Deseja cancelar a operação? Todos os dados serão perdidos." %>
  </div>
      
    <% end %>
    
    
    
  <% end %>
</fieldset>

<table>
  
</table>
